<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="br.edu.pdm.tccfreak.SobreActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/txtTituloS"
        android:id="@+id/txtTituloS"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="35dp"
        android:textColor="#2d20e8" />

    <TextView
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:text="@string/txtTextoS"
        android:id="@+id/txtTextoS"
        android:layout_weight="0.08"
        android:textColor="#000000"
        android:textSize="15dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:text="@string/txtDesenvolve"
        android:id="@+id/txtDesenvolve"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="15dp"
        android:textColor="#2433d9" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.10">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView3"
            android:src="@drawable/deiziane"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="223dp"
            android:layout_height="80dp"
            android:text="@string/txtDeizi"
            android:id="@+id/txtDeizi"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.10" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView4"
            android:src="@drawable/rafael"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="223dp"
            android:layout_height="80dp"
            android:text="@string/txtRafa"
            android:id="@+id/txtRafa"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.10" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView5"
            android:src="@drawable/franciele"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="177dp"
            android:layout_height="80dp"
            android:text="@string/txtFran"
            android:id="@+id/txtFran"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>
